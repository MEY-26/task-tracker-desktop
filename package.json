{
  "main": "electron/main.js",
  "name": "task-tracker-desktop",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern bir masaüstü görev takip uygulaması",
  "keywords": [
    "electron",
    "react",
    "task-tracker",
    "desktop-app",
    "laravel-api"
  ],
  "author": "MEY-26",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MEY-26/task-tracker-desktop.git"
  },
  "homepage": "https://github.com/MEY-26/task-tracker-desktop#readme",
  "bugs": {
    "url": "https://github.com/MEY-26/task-tracker-desktop/issues"
  },
  "scripts": {
    "dev": "concurrently -k \"cross-env NODE_ENV=development vite --host\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build:ui": "vite build",
    "build": "npm run build:ui && electron-builder",
    "build:win": "npm run build:ui && electron-builder --win",
    "build:mac": "npm run build:ui && electron-builder --mac",
    "build:linux": "npm run build:ui && electron-builder --linux",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "setup": "npm install && cd task-tracker-api && composer install",
    "setup:dev": "npm run setup && cd task-tracker-api && cp env.example .env && php artisan key:generate"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.example.tasktracker",
    "productName": "TaskTracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/vite.svg"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/vite.svg"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/vite.svg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
